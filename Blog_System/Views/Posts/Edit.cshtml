@model Blog_System.Models.Post;

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit BlogPost - User Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null)
    {
        <form method="post">

            <div class="mb-3">
                <label class="form-label">PostId</label>
                <input type="text" class="form-control" id="id" asp-for="PostId" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Title</label>
                <input type="text" class="form-control" id="title" asp-for="Title" />
            </div>

            <div class="mb-3">
                <label class="form-label">Content</label>
                <textarea class="form-control" id="content" asp-for="Content"></textarea>
            </div>



            <div class="mb-3 d-flex">

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>

                <button type="submit"
                        class="btn btn-danger ms-2"
                        asp-area=""
                        asp-controller="Posts"
                        asp-action="Delete"
                        asp-route-id="@Model.PostId">
                    Delete
                </button>

            </div>

        </form>
    }

    else
    {
        <p>No blog post found!</p>

    }


</div>